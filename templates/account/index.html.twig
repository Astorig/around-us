{% extends 'base_content.html.twig' %}

{% block title %}Личный кабинет{% endblock %}
{% block content_row_class %}{% endblock %}
{% block content %}
<div class="card border rounded-lg mb-4 shadow-sm bg-white">
    <div class="card-header">
        <div class="row">
            <div class="col-sm-2">
                <img src="{{ app.user.avatarUrl(150) }}">
            </div>
            <div class="col-sm-10">
                <div class="d-flex justify-content-between">
                    <h3 class="align-self-center mb-0"> Привет, {{ app.user.firstName }}</h3>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
